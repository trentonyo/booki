{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react"  // Add this line
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],  // Include .tsx files
  "exclude": ["node_modules"]
}
